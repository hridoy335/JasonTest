@model JasonTest.Models.Course

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DeletePartial</title>
</head>
<body>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        
        <dl class="dl-horizontal">
            @Html.HiddenFor(model => model.CourseId, new { @id = "CourseID" })
            <dt>
                @Html.DisplayNameFor(model => model.CourseName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CourseName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CourseCredit)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CourseCredit)
            </dd>

        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="button" value="Delete" class="btn btn-danger" id="DeleteCourseInfo()" onclick="DeleteCourseInfo()" />
            </div>
        }
    </div>
</body>
</html>
